<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTourFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/headlineTV"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:text="Add Trip"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/trip_nameET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:hint="Trip Name"

                android:padding="10dp"
                android:screenReaderFocusable="true" />


            <EditText
                android:id="@+id/descriptionET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:hint="Description"

                android:padding="10dp"
                android:screenReaderFocusable="true" />

            <EditText
                android:id="@+id/budgetET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:hint="Your Etimated Budget"

                android:padding="10dp"
                android:screenReaderFocusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/datePickerFromTV"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:gravity="center_horizontal"
                    android:hint="Start Date"
                    android:paddingTop="22dp" />

                <View

                    android:layout_width="0.70dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="11dp"
                    android:background="@color/purple" />

                <TextView
                    android:id="@+id/datePickerToTV"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:gravity="center_horizontal"
                    android:hint="End Date"
                    android:paddingTop="22dp" />


            </LinearLayout>


            <Button
                android:id="@+id/add_tourBTN"

                android:layout_width="95dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/add_button"
                android:text="ADD"
                android:textColor="@color/purple"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>
</layout>